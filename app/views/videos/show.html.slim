.single-content
  .row
    .large-12.columns
      .top
        .title
          h4
            small Video
          h2 = @video.title

  .row
    article
      .large-6.columns
        .embed
          iframe width="560" height="315" src="//#{@video.embed_url}" frameborder="0" allowfullscreen

      .large-5.columns
        .content
          h3 Sobre
          p = @video.description

  .row
    aside
      .large-4.columns
        h5 
          | Gostou do conte√∫do?
      .large-8.columns
        p.votes
          i.fa.fa-camera-retro.fa-2x
            = link_to 'down', downvote_video_path
          
          i.fa.fa-camera-retro.fa-2x
            = link_to 'up', upvote_video_path

          = " #{@video.score} "




