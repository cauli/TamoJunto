.sign_up_box
  h2 = t(".sign_up")
  br/

  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.error_notification
    .form-inputs
      - unless resource.name.present? and not resource.errors.include? :name
        = f.input :name, :required => true, :autofocus => true
      = f.input :kind, as: :select, collection: { t('.individual') => 'individual', 
                                                  t('.legal_entity') => 'legal_entity',
                                                  t('.NGO') => 'NGO',
                                                  t('.university') => 'university',
                                                  t('.public_organ') => 'public_organ' }
      - unless resource.email.present? and not resource.errors.include? :email
        = f.input :email, :required => true
      = f.input :password, :required => true, :hint => false
    = f.input :password_confirmation, :required => true, :hint => false

    = f.button :submit, t(".sign_up")
  = render "devise/shared/links"

